<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="2dp"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/nik"
            android:drawablePadding="5dp"
            android:id="@+id/EditText_NIK"
            android:inputType="number"
            android:hint="NIK"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="2dp"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/nama"
            android:drawablePadding="5dp"
            android:id="@+id/EditText_NamaLengkap"
            android:hint="Nama Lengkap"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="2dp"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/alamat"
            android:drawablePadding="5dp"
            android:id="@+id/EditText_Alamat"
            android:hint="Alamat Lengkap"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="2dp"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="5dp"
            android:id="@+id/EditText_Email"
            android:inputType="textEmailAddress"
            android:hint="Email"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="2dp"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/username"
            android:drawablePadding="5dp"
            android:id="@+id/EditText_Username"
            android:hint="Username"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="5dp"
            android:inputType="textPassword"
            android:id="@+id/EditText_Password"
            android:hint="Password"/>

        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:id="@+id/button_register"
            android:background="#04AC00"
            android:text="Register"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="#ffffff"
                android:text="already registered?"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:id="@+id/textview_login"
                android:textColor="#04AC00"
                android:text="LOGIN"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>